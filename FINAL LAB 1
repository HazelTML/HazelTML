import java.util.Scanner;

public class StockManagement {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Number of products
        final int NUM_PRODUCTS = 10;

        // Arrays to store stock levels and prices
        int[] stockLevels = new int[NUM_PRODUCTS];
        double[] prices = new double[NUM_PRODUCTS];

        // Collect user input for stock levels and prices
        System.out.println("Enter the stock levels for " + NUM_PRODUCTS + " products:");
        for (int i = 0; i < NUM_PRODUCTS; i++) {
            System.out.print("Stock level for product " + (i + 1) + ": ");
            stockLevels[i] = scanner.nextInt();
        }

        System.out.println("Enter the prices for " + NUM_PRODUCTS + " products:");
        for (int i = 0; i < NUM_PRODUCTS; i++) {
            System.out.print("Price for product " + (i + 1) + ": ");
            prices[i] = scanner.nextDouble();
        }

        // Variables to calculate total, average, highest, and lowest values
        double totalValue = 0;
        double highestValue = 0;
        double lowestValue = Double.MAX_VALUE;

        // Calculate total value and find highest/lowest values
        for (int i = 0; i < NUM_PRODUCTS; i++) {
            double productValue = stockLevels[i] * prices[i];
            totalValue += productValue;

            if (productValue > highestValue) {
                highestValue = productValue;
            }

            if (productValue < lowestValue) {
                lowestValue = productValue;
            }
        }

        // Calculate the average value
        double averageValue = totalValue / NUM_PRODUCTS;

        // Output results
        System.out.println("\nStock Summary:");
        System.out.println("Total value of all items in stock: $" + totalValue);
        System.out.println("Average value of items in stock: $" + averageValue);
        System.out.println("Highest value of a product in stock: $" + highestValue);
        System.out.println("Lowest value of a product in stock: $" + lowestValue);

        scanner.close();
    }
}