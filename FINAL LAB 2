November 20, 2024*/

import java.util.Scanner;

public class TemperatureTracker {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Constants for the number of cities and days
        final int NUM_CITIES = 3;
        final int NUM_DAYS = 7;

        // 2D array to store daily temperatures for 3 cities over 7 days
        double[][] temperatures = new double[NUM_CITIES][NUM_DAYS];

        // Collect user input for temperature readings
        System.out.println("Enter the daily temperatures for " + NUM_CITIES + " cities over " + NUM_DAYS + " days:");
        for (int city = 0; city < NUM_CITIES; city++) {
            System.out.println("City " + (city + 1) + ":");
            for (int day = 0; day < NUM_DAYS; day++) {
                System.out.print("Day " + (day + 1) + ": ");
                temperatures[city][day] = scanner.nextDouble();
            }
        }

        // Variables to store averages and highest temperatures for each city
        double[] averageTemperatures = new double[NUM_CITIES];
        double[] highestTemperatures = new double[NUM_CITIES];

        // Calculate average and highest temperature for each city
        for (int city = 0; city < NUM_CITIES; city++) {
            double totalTemperature = 0;
            double highestTemperature = Double.MIN_VALUE;

            for (int day = 0; day < NUM_DAYS; day++) {
                totalTemperature += temperatures[city][day];
                if (temperatures[city][day] > highestTemperature) {
                    highestTemperature = temperatures[city][day];
                }
            }

            averageTemperatures[city] = totalTemperature / NUM_DAYS;
            highestTemperatures[city] = highestTemperature;
        }

        // Output the results formatted to two decimal places
        System.out.println("\nTemperature Analysis:");
        for (int city = 0; city < NUM_CITIES; city++) {
            System.out.printf("City %d:%n", city + 1);
            System.out.printf("  Average Temperature: %.2f%n", averageTemperatures[city]);
            System.out.printf("  Highest Temperature: %.2f%n", highestTemperatures[city]);
        }

        scanner.close();
    }
}